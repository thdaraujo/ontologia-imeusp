### Exemplos ###


PREFIX rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#>
PREFIX owl: <http://www.w3.org/2002/07/owl#>
PREFIX xsd: <http://www.w3.org/2001/XMLSchema#>
PREFIX rdfs: <http://www.w3.org/2000/01/rdf-schema#>
PREFIX onto: <http://www.semanticweb.org/thiagoaraujo/ontologies/2014/10/SBC-ontologia-ime#>

SELECT ?object
	WHERE { ?object rdfs:subClassOf onto:Pessoa }


SELECT ?aluno
	WHERE {onto:Renata_Wassermann onto:orienta ?aluno }


SELECT ?professor ?aluno
	WHERE {?professor onto:orienta ?aluno }


SELECT 	?professor
WHERE
{ 
	?professor onto:primeiro_nome "Renata"^^xsd:string
}

SELECT 	?revista ?titulo_revista
WHERE
{ 
	?revista a onto:Revista;
	onto:titulo 	?titulo_revista.
	FILTER (str(?titulo_revista) = "[Teste] Revista de IA de Sao Paulo")
}








